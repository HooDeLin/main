<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="procrastinate.UI">
	<bottom>
		<VBox spacing="2.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="userInputField" />
				<Label fx:id="statusLabel" />
			</children>
			<padding>
				<Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
			</padding>
		</VBox>
	</bottom>
   <center>
      <ListView fx:id="taskListView" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
