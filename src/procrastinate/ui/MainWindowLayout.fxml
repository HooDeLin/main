<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
	<bottom>
		<VBox spacing="2.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="userInputField" />
				<Label fx:id="statusLabel" />
			</children>
			<padding>
				<Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
			</padding>
		</VBox>
	</bottom>
   <center>
      <StackPane fx:id="centerScreen" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="taskListView" />
         </children>
      </StackPane>
   </center>
</BorderPane>
